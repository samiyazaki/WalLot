<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Enter Monthly Income</h3>

    <form class="form new-income-form">
      <div class="form-group">
        <label for="income-name">Name your source of income</label>
        <input class="form-input" type="text" id="income-name" name="income-name" />
      </div>
      <div class="form-group">
        <label for="income-amount">Enter the amount</label>
        <input class="form-input" id="income-amount" name="income-amount"></input>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Income</button>
      </div>
      <a href="/dashboard" class="btn btn-primary back-btn">Return to dashboard</a>

    </form>
  </div>

  {{#if income}}
  <div class="col-md-6 post-list">
    <h3>Current Income:</h3>

    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{income.amount}}</h4>
      </div>
    </div>
  </div>
  {{/if}}
</div>

<script src="./js/income.js"></script>